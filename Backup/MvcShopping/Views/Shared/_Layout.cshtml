<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="header">
        <div id="nav">
            <ul>
            <li>@Html.ActionLink("首页","Index","Home")</li>
            <li>@Html.ActionLink("购物车","Index","Cart")</li>
            <li>@Html.ActionLink("后台管理","Index","Admin")</li>
            @if(!User.Identity.IsAuthenticated)
            {
               <li>@Html.ActionLink("登陆","Login","Member")</li>
               <li>@Html.ActionLink("注册","Register","Member")</li>
            }
            else
            {
               <li>@Html.ActionLink("注销","Logout","Member")</li>
            }

            </ul>
        </div>
        <div id="top">
            <a href="@Url.Content("~")"><img alt="logo"  src="~/images/other/GSHOP.jpg" /></a>
        </div> 
    </div>
    <div id="content">
        @RenderBody()
    </div>
    <div id="footer">
        <div>
            <p>&copy;@DateTime.Now.Year</p>
            
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
