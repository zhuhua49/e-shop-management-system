<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <!-- 新 Bootstrap 核心 CSS 文件 -->
    <link href="https://cdn.staticfile.org/twitter-bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
    <!-- jQuery文件。务必在bootstrap.min.js 之前引入 -->
    <script src="https://cdn.staticfile.org/jquery/2.1.1/jquery.min.js"></script>
    <!-- 最新的 Bootstrap 核心 JavaScript 文件 -->
    <script src="https://cdn.staticfile.org/twitter-bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body><div id="Layout"><content>
    <div id="header">
        <div id="nav">
            <ul>
                <li>@Html.ActionLink("首页", "Index", "Home")</li>
                <li>@Html.ActionLink("购物车", "Index", "Cart")</li>
                <li>@Html.ActionLink("后台管理", "Index", "Admin")</li>
                @if (!User.Identity.IsAuthenticated)
                {
                    <li>@Html.ActionLink("登陆", "Login", "Member")</li>
                    <li>@Html.ActionLink("注册", "Register", "Member")</li>
                }
                else
                {
                    <li>欢迎你，@User.Identity.Name</li>
                    <li>@Html.ActionLink("注销", "Logout", "Member")</li>
                }

            </ul>
        </div>
        <div id="top">
            <a href="#"><img alt="logo" src="~/images/other/logo.png" /></a>
        </div>
    </div>
    <div id="content">
        @RenderBody()
    </div>
    <div id="footer">
        <div>
            <p>&copy;@DateTime.Now.Year</p>

        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</content></div></body>
</html>
